@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<style>
    h1,h2{
        color:white;
        margin-left:10px;
        text-align: center;
    }

    .form-label{
        font-size: 24px;
    }

    .btn {
        outline-color: red;
    }

    btn:active {
        color: blue;
    }
</style>
<div style="margin-left: 350px; margin-top:100px" class="row">
    <div class="col-md-8">
        <section>
            <form id="account" method="post">
                <h2>Вітаємо! Для користування застосунком вам потрібно авторизуватися</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <p></p>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <p></p>
                <div>
                    <div class="checkbox">
                        <label style="color:white" asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Запам'ятати мене
                        </label>
                    </div>
                </div>
                <div>
                    <button type="submit" style="background-color: #566d96; color: white" class="w-100 btn btn-lg">Увійти</button>
                </div>
                <p></p>
                <div>
                    <p></p>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забули свій пароль?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Зареєструватися</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    