@model Planner.Models.Task

@{
    ViewData["Title"] = "Details";
}


<style>
    * {
        color: white;
    }

    .check-box
    {
        width: 28px;
        height: 28px;
    }

</style>

<h1>Деталі завдання</h1>

<p></p>

<div style="font-size:28px; margin-top: 6%;">
    <h4 style="text-align: center"> @Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row" style="white-space: pre-line;">
        <dt class="col-sm-3">
            Опис
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-3">
            Статус виконання
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.IsCompleted)
        </dd>
        <dt class="col-sm-3">
            Обліковий запис
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
    <a type="submit" class="btn" style="background-color: #566d96; color: white; width: 40%" asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a>
    <a type="submit" class="btn" style="background-color: #566d96; color: white; width: 40%" asp-action="Index">Повернутись</a>
</div>
