@model Planner.Models.Task

@{
    ViewData["Title"] = "Редагуваня";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/uk.js"></script>


<script>
    $(document).ready(function () {
        $("#deadline").datepicker();
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        flatpickr("#deadline", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            locale: "uk"
            // Інші опції, якщо потрібно
        });
    });
</script>



<div style="align-content: center" class="text-white">
    <h1 style="text-align: center">Редагування завдання</h1>
</div>

<hr />
<div class="row">
    <div class="col-md-6 mx-auto text-white mb-3">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Назва завдання</label>
                <input asp-for="Name" class="form-control" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label">Опис</label>
                <textarea asp-for="Description" style="height: 240px; white-space: pre-line; " class="form-control"></textarea>

            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> Статус виконання
                </label>
            </div>

@*            <div class="form-group">
                <label asp-for="Email">Акаунт</label>
                <input id="email" asp-for="Email" class="form-control" readonly />
            </div>*@

            <div class="form-group">
                <label asp-for="Deadline">Дедлайн</label>
                <input id="deadline" asp-for="Deadline" class="form-control"  />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>

            <p></p>
            <div class="form-group" style="display: flex; justify-content: space-between; align-items: center;">
                <input type="submit" value="Зберегти" class="btn" style="background-color: #566d96; color: white; width: 40%" />
                <a type="submit" class="btn" style="background-color: #566d96; color: white; width: 40%" asp-action="Index">Повернутись</a>
            </div>
            <div>
                
            </div>
        </form>
    </div>
</div>



